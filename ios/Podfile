# ios/Podfile
source 'https://cdn.cocoapods.org/'

platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

flutter_root = ENV['FLUTTER_ROOT'] || File.expand_path('../..', __dir__) + '/flutter'
require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Installs all Flutter pods (Stripe, gRPC, etc.)
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end  # closes the Runner target

# -------------------------------------------------------------------
# Post-install hook (top-level; runs after all pods are installed)
# -------------------------------------------------------------------
post_install do |installer|
  installer.pods_project.targets.each do |target|
    # 1) Apply Flutter defaults & enforce minimum iOS version
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # 2) Strip any "-G…" flags from *every* OTHER_* build setting
      config.build_settings.keys.grep(/^OTHER_/).each do |key|
        val = config.build_settings[key]
        if val.is_a?(String)
          config.build_settings[key] = val
            .split
            .reject { |f| f.start_with?('-G') }
            .join(' ')
        end
      end
    end

    # 3) For every source file, strip any "-G…" in COMPILER_FLAGS
    if target.respond_to?(:source_build_phases)
      target.source_build_phases.each do |phase|
        phase.files.each do |file|
          next unless file.respond_to?(:settings)
          flags = file.settings['COMPILER_FLAGS']
          if flags.is_a?(String)
            file.settings['COMPILER_FLAGS'] = flags
              .split
              .reject { |f| f.start_with?('-G') }
              .join(' ')
          end
        end
      end
    end
  end
end
