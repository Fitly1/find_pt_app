# ios/Podfile
source 'https://cdn.cocoapods.org/'

platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

flutter_root = ENV['FLUTTER_ROOT'] ||
  File.expand_path('../..', __dir__) + '/flutter'
require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Install all Flutter plugin pods
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Apply Flutter defaults & enforce iOS 13+
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end

    # For BoringSSL-GRPC, strip any "-Gâ€¦" flags from compiler settings
    if target.name == 'BoringSSL-GRPC'
      # 1) Clean OTHER_CFLAGS
      target.build_configurations.each do |config|
        if config.build_settings['OTHER_CFLAGS'].is_a?(String)
          flags = config.build_settings['OTHER_CFLAGS'].split
          filtered = flags.reject { |f| f.start_with?('-G') }
          config.build_settings['OTHER_CFLAGS'] = filtered.join(' ')
        end
      end

      # 2) Clean per-file COMPILER_FLAGS
      target.source_build_phases&.each do |phase|
        phase.files.each do |file|
          next unless file.respond_to?(:settings)
          cf = file.settings['COMPILER_FLAGS']
          if cf.is_a?(String)
            flags = cf.split
            filtered = flags.reject { |f| f.start_with?('-G') }
            file.settings['COMPILER_FLAGS'] = filtered.join(' ')
          end
        end
      end
    end
  end
end
