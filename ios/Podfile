# ios/Podfile
source 'https://cdn.cocoapods.org/'

platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

flutter_root = ENV['FLUTTER_ROOT'] || File.expand_path('../..', __dir__) + '/flutter'
require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end  # closes Runner target

# -----------------------------------------------------------------------------
# Post-install hook (top-level)
# -----------------------------------------------------------------------------
post_install do |installer|
  installer.pods_project.targets.each do |target|
    # 1) Apply Flutter defaults & enforce iOS 13.0
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # 2) Strip any top-level "-Gâ€¦" from OTHER_CFLAGS
      if config.build_settings['OTHER_CFLAGS'].is_a?(String)
        config.build_settings['OTHER_CFLAGS'] =
          config.build_settings['OTHER_CFLAGS']
            .split
            .reject { |flag| flag.start_with?('-G') }
            .join(' ')
      end
    end

    # 3) For BoringSSL-GRPC, scrub per-file COMPILER_FLAGS safely
    if target.name == 'BoringSSL-GRPC' && target.respond_to?(:source_build_phases)
      target.source_build_phases.each do |phase|
        phase.files.each do |file|
          if file.respond_to?(:settings) && file.settings['COMPILER_FLAGS'].is_a?(String)
            file.settings['COMPILER_FLAGS'] =
              file.settings['COMPILER_FLAGS']
                .split
                .reject { |flag| flag.start_with?('-G') }
                .join(' ')
          end
        end
      end
    end
  end
end
