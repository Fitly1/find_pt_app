post_install do |installer|
  installer.pods_project.targets.each do |target|
    # 1) Apply Flutter defaults & enforce iOS 13.0
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # 2) Strip any "-Gâ€¦" flags from *every* OTHER_* build setting
      config.build_settings.keys.grep(/^OTHER_/).each do |key|
        val = config.build_settings[key]
        if val.is_a?(String)
          config.build_settings[key] = val
            .split
            .reject { |f| f.start_with?('-G') }
            .join(' ')
        end
      end
    end

    # 3) Scrub per-file COMPILER_FLAGS in every source build phase
    if target.respond_to?(:source_build_phases)
      target.source_build_phases.each do |phase|
        phase.files.each do |file|
          next unless file.respond_to?(:settings)
          flags = file.settings['COMPILER_FLAGS']
          if flags.is_a?(String)
            file.settings['COMPILER_FLAGS'] = flags
              .split
              .reject { |f| f.start_with?('-G') }
              .join(' ')
          end
        end
      end
    end
  end
end
