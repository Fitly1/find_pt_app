# ios/Podfile
source 'https://cdn.cocoapods.org/'

platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

flutter_root = ENV['FLUTTER_ROOT'] ||
  File.expand_path('../..', __dir__) + '/flutter'
require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # 1) Pin GTMSessionFetcher/Core to 3.x (>=3.4,<5.0) so all Firebase pods are happy
  pod 'GTMSessionFetcher/Core', '~> 3.4'

  # 2) Pin Stripe-ObjC (the external source) to the CDN version
  pod 'Stripe-ObjC', '21.17.0'

  # 3) Now bring in every Flutter plugin pod (Firebase, Stripe, etc.)
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Flutter default settings & enforce iOS 13.0
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end

    # Strip simulator-only -G flags out of BoringSSL-GRPC
    if target.name == 'BoringSSL-GRPC'
      target.build_configurations.each do |config|
        if (oc = config.build_settings['OTHER_CFLAGS']).is_a?(String)
          config.build_settings['OTHER_CFLAGS'] = oc
            .split
            .reject { |f| f.start_with?('-G') }
            .join(' ')
        end
      end
      target.source_build_phases&.each do |phase|
        phase.files.each do |file|
          next unless file.respond_to?(:settings)
          if (cf = file.settings['COMPILER_FLAGS']).is_a?(String)
            file.settings['COMPILER_FLAGS'] = cf
              .split
              .reject { |f| f.start_with?('-G') }
              .join(' ')
          end
        end
      end
    end
  end
end
